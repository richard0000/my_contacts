<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card">

        <div class="card-header">
          <p>
            <strong>Name:</strong>
            <%= @task.name %>
          </p>
        </div>

        <div class="card-body">
          <p>
            <strong>Status:</strong>
            <%= @task.status %>
          </p>

          <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-primary" %> |
          <%= link_to 'Back', tasks_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>